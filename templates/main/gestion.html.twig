{% extends "base.html.twig" %}
{% block body %}
<h1 class="text-center mt-6">Tableau </h1>
<table class="table container" >
  <thead>
    <tr>
      <th scope="col">Produit</th>
      <th scope="col">Titre</th>
      <th scope="col">Description</th>
      <th scope="col">couleur</th>
      <th scope="col">Taille</th>
      <th scope="col">Collection</th>
      <th scope="col">Prix</th>
      <th scope="col">Stock</th>
      <th scope="col">Photo</th>
      <th scope="col">Modifier</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <tbody>
         {% for article in produit %}
                
             <tr>
                <td>{{ article.id }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.description }}</td>
                    <td>{{ article.couleur }}</td>
                    <td>{{ article.taille }}</td>
                    <td>{{ article.collection}}</td>
                    {# <td>{{ article.photo}}</td> #}
                    <td>{{ article.prix}}</td>
                    <td>{{ article.stock}}</td>
                    <td> <img src="{{ article.photo}}" alt="mon image"></td>
                    <td>
                        {# <a href="{{ path('blog_show', {id: article.id} ) }}" class="text-info">voir</a> #}
                        <a href="{{ path("edit_produit", {id: article.id}) }}" class="btn btn-primary">modifier</a>
                    </td>
                    <td>
                      <a href="{{ path('delete_produit', {id: article.id}) }}" class="btn btn-danger">supprimer</a> 
                    </td>
                </tr>

            {% endfor %}
  </tbody>
</table>
{% endblock %}